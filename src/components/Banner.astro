<style>
    .banner {
        background-image: url('/public/banner.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        color: var(--color-white);
        text-align: center;
        position: relative;
    }

    .banner h2 {
        font-weight: bold;
        position:absolute;
        top: 20%;
        left: 10%;
    }

    .banner button {
        border: none;
        background: none;
        margin: 1rem;
        background-color: rgba(232, 217, 182, 0.5);
        border-radius: 1rem;
        padding: 0.75rem;
        position: absolute;
        bottom: 10%;
        left: 7.5%;
        cursor: pointer;
    }

    .banner button span {
        color: var(--color-sand);
    }
</style>

<script>
    const btn = document.getElementById('scroll-contact');
    btn?.addEventListener('click', ()=> {
        document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth'});
    });
</script>
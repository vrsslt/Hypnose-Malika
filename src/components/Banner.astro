<style>
    .banner {
        scroll-margin-top: 100px; 
        background-image: url('/banner.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        color: var(--color-white);
        text-align: center;
        position: relative;
    }

    .banner h2 {
        font-weight: bold;
        font-size: 2rem;
        position:absolute;
        top: 15%;
        left: 15%;
    }

    .banner button {
        border: none;
        background: none;
        margin: 1rem;
        background-color: rgba(232, 217, 182, 0.5);
        border-radius: 1rem;
        padding: 0.75rem;
        position: absolute;
        bottom: 10%;
        left: 9.5%;
        cursor: pointer;
        font-family: "Handlee", cursive;
        font-weight: bold;
    }

    .banner button span {
        color: var(--color-sand);
    }

    @media (min-width: 1024px) {

        .banner {
            height: 500px;
            scroll-margin-top: 200px;
            margin-top: 100px;
            background-size: 100%;
            background-position: center 30%;

        }

        .banner h2 {
            font-size: 3.5rem;
            top: 20%;
            left: 22.5%;
        }

        .banner button {
            width: 250px;
            height: 50px;
            left: 20%;
            bottom: 20%;
        }

        .banner button span {
            font-size: 1rem ;
        }
    }
</style>

<script>
    const btn = document.getElementById('scroll-contact');
    btn?.addEventListener('click', ()=> {
        document.getElementById('contact')?.scrollIntoView({ behavior: 'smooth'});
    });
</script>